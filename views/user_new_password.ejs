<link rel="stylesheet" href="/css/form.css">

<div class="sign-up-form form white-back">
    <form action="/users/new-password" method="post">

        <div class="form-field">
            <label for="password">Password:</label>
            <input type="password" name="password" id="password" autocomplete="off" placeholder="Enter password">
            <small></small>
        </div>

        <div class="form-field">
            <label for="confirm-password">Confirm Password:</label>
            <input type="password" name="confirm_password" id="confirm-password" autocomplete="off"
                placeholder="Confirm password">
            <small></small>
        </div>

        <button class="btn submit-btn" type="submit">Change Password</button>
    </form>
</div>